<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/futils_no_internet_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/no_internet_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/futils_ic_perm_scan_wifi" />

    <TextView
        android:id="@+id/no_internet_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/no_internet_img"
        android:gravity="center"
        android:text="لا يوجد إنترنت"
        android:textColor="#222"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/try_again_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/no_internet_text"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="حاول مرة أخرى "
        android:textColor="#111" />
</RelativeLayout>